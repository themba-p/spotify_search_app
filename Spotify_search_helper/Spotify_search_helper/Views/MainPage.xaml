                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE768;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="Add to other playlist" Command="{Binding ElementName=page, Path=DataContext.AddTrackToPlaylistCommand}"
