                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE710;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Text="Remove" Command="{Binding ElementName=page, Path=DataContext.RemoveTrackFromCurrentPlaylistCommand}" 
                                                    CommandParameter="{Binding}">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE711;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </FlyoutBase.AttachedFlyout>
                            <Interactivity:Interaction.Behaviors>
                                <ToolkitBehaviors:Fade x:Name="TrackFadeIn" Duration="300" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                                <ToolkitBehaviors:Fade x:Name="TrackFadeOut" Duration="300" Delay="0" AutomaticallyStart="False" Value="0.1" EasingMode="EaseOut" EasingType="Cubic" />
                                <ToolkitBehaviors:Scale x:Name="TrackScaleDown" Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="0.95" ScaleY="0.95" CenterX="{Binding ElementName=page, Path=DataContext.TracksViewWidthHalf}" CenterY="48" EasingMode="EaseOut"  EasingType="Cubic" />
                                <ToolkitBehaviors:Scale x:Name="TrackScaleNormal"  Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="1" ScaleY="1" CenterX="{Binding ElementName=page, Path=DataContext.TracksViewWidthHalf}" CenterY="48" EasingMode="EaseOut"   EasingType="Cubic"/>
                                <Core:EventTriggerBehavior EventName="PointerEntered">
                                    <Core:CallMethodAction TargetObject="{Binding ElementName=TracksListViewThumbScaleDown}" MethodName="StartAnimation"/>
                                    <Core:CallMethodAction TargetObject="{Binding ElementName=TracksViewItemPlayActionsFadeIn}" MethodName="StartAnimation"/>
                                    <Core:CallMethodAction TargetObject="{Binding ElementName=TrackTrackBorderFadeOut}" MethodName="StartAnimation"/>
                                </Core:EventTriggerBehavior>
                                <Core:EventTriggerBehavior EventName="PointerExited">
                                    <Core:CallMethodAction TargetObject="{Binding ElementName=TracksListViewThumbScaleNormal}" MethodName="StartAnimation"/>
                                    <Core:CallMethodAction TargetObject="{Binding ElementName=TracksViewItemPlayActionsFadeOut}" MethodName="StartAnimation"/>
                                    <Core:CallMethodAction TargetObject="{Binding ElementName=TrackBorderFadeIn}" MethodName="StartAnimation"/>
                                </Core:EventTriggerBehavior>
                            </Interactivity:Interaction.Behaviors>
                            <CheckBox IsChecked="{Binding IsFocused, Mode=TwoWay}" Visibility="Collapsed">
                                <Interactivity:Interaction.Behaviors>
                                    <Core:EventTriggerBehavior EventName="Unchecked">
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackFadeOut}" MethodName="StartAnimation"/>
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackScaleDown}" MethodName="StartAnimation"/>
                                    </Core:EventTriggerBehavior>
                                    <Core:EventTriggerBehavior EventName="Checked">
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackFadeIn}" MethodName="StartAnimation"/>
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackScaleNormal}" MethodName="StartAnimation"/>
                                    </Core:EventTriggerBehavior>
                                </Interactivity:Interaction.Behaviors>
                            </CheckBox>
                            <Grid x:Name="TrackBorder" 
                                  Grid.ColumnSpan="10">
                                <Interactivity:Interaction.Behaviors>
                                    <ToolkitBehaviors:Fade x:Name="TrackBorderFadeIn" Duration="250" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                                    <ToolkitBehaviors:Fade x:Name="TrackTrackBorderFadeOut"  Duration="250" Delay="0" AutomaticallyStart="False" Value="0.5" EasingMode="EaseOut"  EasingType="Cubic" />
                                </Interactivity:Interaction.Behaviors>
                                <Rectangle x:Name="TrackUnselectedBorder"
                                           Fill="{ThemeResource ItemBackgroundThemeBrush}"
                                           RadiusX="20"
                                           RadiusY="20"
                                           Opacity="1"
                                           Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                </Rectangle>
                                <Rectangle x:Name="SelectedTrackBorder"
                                           Fill="{ThemeResource BrandColorThemeBrush}"
                                           RadiusX="20"
                                           RadiusY="20"
                                           Opacity="1"
                                           Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>
                            <Grid Background="{ThemeResource SecondaryItemBackgroundThemeBrush}" 
                                  CornerRadius="20"
                                  Height="80" 
                                  Width="80"
                                  Margin="8">
