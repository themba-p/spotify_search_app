                                <Core:CallMethodAction TargetObject="{Binding ElementName=currentPlaylistPlayBtnScaleUp}" MethodName="StartAnimation"/>
                            </Core:EventTriggerBehavior>
                            <Core:EventTriggerBehavior EventName="PointerExited">
                                <Core:CallMethodAction TargetObject="{Binding ElementName=currentPlaylistPlayBtnScaleNormal}" MethodName="StartAnimation"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF5B0;" FontSize="14"/>
                    </Button>
                </Grid>
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Left"
                            Margin="24 12 16 0" 
                            Grid.Column="1">
                    <Interactivity:Interaction.Behaviors>
                        <ToolkitBehaviors:Offset x:Name="PlaylistInfoTrackViewOffsetIn" Duration="400" Delay="0" AutomaticallyStart="False" OffsetX="0" OffsetY="0" EasingMode="EaseOut"  EasingType="Cubic" />
                        <ToolkitBehaviors:Offset x:Name="PlaylistInfoTrackViewOffsetOut"  Duration="400" Delay="0" AutomaticallyStart="False" OffsetX="48" OffsetY="0"  EasingMode="EaseOut"   EasingType="Cubic"/>
