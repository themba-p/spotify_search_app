                                                    TintOpacity="0.70"
                                                    BlurAmount="5" 
                                                    FallbackColor="#000000"/>
                                    </Rectangle.Fill>
                                    <Interactivity:Interaction.Behaviors>
                                        <ToolkitBehaviors:Fade x:Name="TracksViewItemThumbBgFadeIn" Duration="300" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                                        <ToolkitBehaviors:Fade x:Name="TracksViewItemThumbBgFadeOut"  Duration="150" Delay="0" AutomaticallyStart="False" Value="0" EasingMode="EaseOut"  EasingType="Cubic" />
                                    </Interactivity:Interaction.Behaviors>
                                </Rectangle>
                                <Button Background="Transparent"
                                        Command="{Binding ElementName=page, Path=DataContext.PlayCurrentPlaylistTrackCommand}"
                                        CommandParameter="{Binding}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Style="{StaticResource TextBlockButtonStyle}"/>
                                <Grid x:Name="TracksViewItemPlayActions" 
                                      Opacity="0"
                                      Height="32" 
                                      Width="32"
                                      Margin="0"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center">
                                    <Interactivity:Interaction.Behaviors>
                                        <ToolkitBehaviors:Fade x:Name="TracksViewItemPlayActionsFadeIn" Duration="300" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                                        <ToolkitBehaviors:Fade x:Name="TracksViewItemPlayActionsFadeOut"  Duration="150" Delay="0" AutomaticallyStart="False" Value="0" EasingMode="EaseOut"  EasingType="Cubic" />
                                    </Interactivity:Interaction.Behaviors>
                                    <muxc:ProgressRing IsActive="{Binding IsLoadingPreview}" 
                                                      Height="32" Width="32"
                                                      Foreground="WhiteSmoke"/>
                                    <Button x:Name="TracksListViewPlayBtn" BorderThickness="2" 
                                            Background="Transparent"
                                            BorderBrush="WhiteSmoke"
                                            Foreground="WhiteSmoke"
                                            RequestedTheme="Dark"
                                            CornerRadius="48"
                                            Height="32" Width="32"
                                            Command="{Binding ElementName=page, Path=DataContext.PlayCurrentPlaylistTrackCommand}"
                                            CommandParameter="{Binding}"
                                            Padding="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                        <Interactivity:Interaction.Behaviors>
                                            <ToolkitBehaviors:Scale x:Name="TracksListViewPlayBtnScaleUp" Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="1.2" ScaleY="1.2" CenterX="16" CenterY="16" EasingMode="EaseOut"  EasingType="Cubic" />
                                            <ToolkitBehaviors:Scale x:Name="TracksListViewPlayBtnScaleNormal"  Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="1" ScaleY="1" CenterX="16" CenterY="16" EasingMode="EaseOut"   EasingType="Cubic"/>

                                            <Core:EventTriggerBehavior EventName="PointerEntered">
                                                <Core:CallMethodAction TargetObject="{Binding ElementName=TracksListViewPlayBtnScaleUp}" MethodName="StartAnimation"/>
                                                <Core:InvokeCommandAction Command="{Binding ElementName=page, Path=DataContext.PlayPreviewCommand}" CommandParameter="{Binding}" />
                                            </Core:EventTriggerBehavior>
                                            <Core:EventTriggerBehavior EventName="PointerExited">
                                                <Core:CallMethodAction TargetObject="{Binding ElementName=TracksListViewPlayBtnScaleNormal}" MethodName="StartAnimation"/>
                                                <Core:InvokeCommandAction Command="{Binding ElementName=page, Path=DataContext.StopPreviewCommand}" CommandParameter="{Binding}" />
                                            </Core:EventTriggerBehavior>
                                        </Interactivity:Interaction.Behaviors>

                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF5B0;" FontSize="16"/>
                                    </Button>
                                </Grid>
                            </Grid>
                            <StackPanel Grid.Column="1"
                                            Margin="12 12 8 12"
                                            VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title, FallbackValue=Uknown}"
                                           FontSize="17"
                                           FontWeight="Medium" 
                                           TextTrimming="CharacterEllipsis"
                                           ToolTipService.ToolTip="{Binding Text, RelativeSource={RelativeSource Mode=Self}}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="By " FontSize="14" Foreground="{ThemeResource ItemSecondaryForeground}" Margin="0 0 2 0"/>
                                    <TextBlock Text="{Binding Artist, FallbackValue=Unknown}" Foreground="{ThemeResource ItemSecondaryForeground}" Grid.Column="1" FontSize="14" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{Binding Text, RelativeSource={RelativeSource Mode=Self}}"/>
                                </Grid>
                                <TextBlock Text="{Binding Album, FallbackValue=Unknown}"
                                               FontSize="14"
                                               Foreground="{ThemeResource ItemSecondaryForeground}"
                                               MaxHeight="46"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"
                                               ToolTipService.ToolTip="{Binding Text, RelativeSource={RelativeSource Mode=Self}}"/>
                            </StackPanel>
                            <Grid Grid.Column="2" Margin="0 0 24 0">
                                <TextBlock Text="{Binding DurationFormated, FallbackValue=0:00}"
                                           FontSize="14"
                                           Foreground="{ThemeResource ItemTertiaryForeground}"
                                           Margin="0 5 0 0"
                                           VerticalAlignment="Center"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Grid.Column="3" Margin="0 0 24 0"
                                        Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                <!--<Grid VerticalAlignment="Center">
                                    <Button BorderThickness="2" BorderBrush="{ThemeResource SecondaryItemBackgroundThemeBrush}" 
                                            Background="Transparent"
                                            CornerRadius="24"
                                            Command="{Binding ElementName=page, Path=DataContext.TracksViewItemSelectionToggleCommand}"
                                            CommandParameter="{Binding}"
                                            Height="32" 
                                            Width="32" 
                                            Padding="0"
                                            Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityInverseConverter}}">

                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF78C;" FontSize="14" Opacity="0.12"/>
                                    </Button>
                                    <Button BorderThickness="2" BorderBrush="{ThemeResource SecondaryItemBackgroundThemeBrush}" 
                                            Background="Transparent"
                                            CornerRadius="24"
                                            Command="{Binding ElementName=page, Path=DataContext.TracksViewItemSelectionToggleCommand}"
                                            CommandParameter="{Binding}"
                                            Height="32" 
                                            Width="32" 
                                            Padding="0"
                                            Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}">

                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF78C;" FontSize="14"/>
                                    </Button>
                                </Grid>-->
                                <Button Background="{ThemeResource SecondaryItemBackgroundThemeBrush}" 
                                        CornerRadius="10"
                                        Command="{Binding ElementName=page, Path=DataContext.RemoveTrackFromCurrentPlaylistCommand}"
                                        CommandParameter="{Binding}"
                                        Grid.Column="1" 
                                        Height="32" 
                                        Margin="0 12 0 12" 
                                        Width="32" Padding="0"
                                        Visibility="{Binding CanModify, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Interactivity:Interaction.Behaviors>
                                        <ToolkitBehaviors:Scale x:Name="TracksViewItemBtnScaleUp" Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="1.1" ScaleY="1.1" CenterX="16" CenterY="16" EasingMode="EaseOut"  EasingType="Cubic" />
                                        <ToolkitBehaviors:Scale x:Name="TracksViewItemBtnScaleNormal"  Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="1" ScaleY="1" CenterX="16" CenterY="16" EasingMode="EaseOut"   EasingType="Cubic"/>
                                        <Core:EventTriggerBehavior EventName="PointerEntered">
                                            <Core:CallMethodAction TargetObject="{Binding ElementName=TracksViewItemBtnScaleUp}" MethodName="StartAnimation"/>
                                        </Core:EventTriggerBehavior>
                                        <Core:EventTriggerBehavior EventName="PointerExited">
                                            <Core:CallMethodAction TargetObject="{Binding ElementName=TracksViewItemBtnScaleNormal}" MethodName="StartAnimation"/>
                                        </Core:EventTriggerBehavior>
                                    </Interactivity:Interaction.Behaviors>
                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE711;" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Header>
                    <Controls:ScrollHeader Mode="QuickReturn">
                        <Grid Padding="24 0" 
                              HorizontalAlignment="Center" 
                              MaxWidth="{Binding ElementName=page, Path=DataContext.TracksMaxWidth}"
                              Width="{Binding ElementName=page, Path=DataContext.TracksViewWidth}">
                            <Grid.Background>
                                <media:AcrylicBrush
                                      BackgroundSource="Backdrop"
                                      TintColor="{ThemeResource TintColor}"
                                      TintOpacity="0.95"
                                      BlurAmount="12"/>
                            </Grid.Background>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Interactivity:Interaction.Behaviors>
                                <ToolkitBehaviors:Fade x:Name="TracksListViewHeaderFadeIn" Duration="300" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                                <ToolkitBehaviors:Fade x:Name="TracksListViewHeaderFadeOut" Duration="300" Delay="0" AutomaticallyStart="False" Value="0.1" EasingMode="EaseOut" EasingType="Cubic" />
                            </Interactivity:Interaction.Behaviors>
                            <Grid x:Name="TrackSubtitle"
                                  Grid.Row="1" 
                                  Height="36"
                                  Margin="0 0 0 12"
                                  Padding="4 0">
                                <Interactivity:Interaction.Behaviors>
                                    <ToolkitBehaviors:Offset x:Name="TrackSubtitleOffsetIn" Duration="400" Delay="0" AutomaticallyStart="False" OffsetX="0" OffsetY="0" EasingMode="EaseOut"  EasingType="Cubic" />
                                    <ToolkitBehaviors:Offset x:Name="TrackSubtitleOffsetOut"  Duration="400" Delay="0" AutomaticallyStart="False" OffsetX="-24" OffsetY="0"  EasingMode="EaseOut"   EasingType="Cubic"/>
                                    <ToolkitBehaviors:Fade x:Name="TrackSubtitleFadeIn" Duration="300" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                                    <ToolkitBehaviors:Fade x:Name="TrackSubtitleFadeOut"  Duration="150" Delay="0" AutomaticallyStart="False" Value="0" EasingMode="EaseOut"  EasingType="Cubic" />
                                </Interactivity:Interaction.Behaviors>
                                <TextBlock Text="{Binding TracksViewSubTitle, FallbackValue=Tracks (0)}"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="{ThemeResource ItemSecondaryForeground}"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsTracksViewFilterActive, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <StackPanel Orientation="Horizontal"
                                            Visibility="{Binding IsTracksViewFilterActive, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                    <TextBlock Text="Created by"
                                               FontSize="14"
                                               Foreground="{ThemeResource ItemTertiaryForeground}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding CurrentPlaylist.Owner.Title}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{ThemeResource ItemPrimaryForeground}"
                                               Margin="4 0 0 0"
                                               VerticalAlignment="Center"/>
                                    <Ellipse Height="3"
                                             Width="3"
                                             Margin="8 0"
                                             Fill="{ThemeResource ItemSecondaryForeground}"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding CurrentPlaylist.ItemsCount}"
                                               FontSize="14"
                                               Foreground="{ThemeResource ItemSecondaryForeground}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Tracks"
                                               FontSize="14"
                                               Foreground="{ThemeResource ItemSecondaryForeground}"
                                               Margin="4 0 0 0"
                                               VerticalAlignment="Center"/>
                                    <Ellipse Height="3"
                                             Width="3"
                                             Margin="8 0"
                                             Fill="{ThemeResource ItemSecondaryForeground}"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding CurrentPlaylist.DurationStr, FallbackValue=0}"
                                               FontSize="14"
                                               Foreground="{ThemeResource ItemSecondaryForeground}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            <Grid x:Name="TrackSearch" 
                                  Height="36"
                                  Grid.Row="0"
                                  Margin="0 24 0 6"
                                  Padding="0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Interactivity:Interaction.Behaviors>
                                    <ToolkitBehaviors:Offset x:Name="TrackSearchOffsetIn" Duration="400" Delay="0" AutomaticallyStart="False" OffsetX="0" OffsetY="0" EasingMode="EaseOut"  EasingType="Cubic" />
                                    <ToolkitBehaviors:Offset x:Name="TrackSearchOffsetOut"  Duration="400" Delay="0" AutomaticallyStart="False" OffsetX="0" OffsetY="32"  EasingMode="EaseOut"   EasingType="Cubic"/>
                                    <ToolkitBehaviors:Fade x:Name="TrackSearchFadeIn" Duration="300" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                                    <ToolkitBehaviors:Fade x:Name="TrackSearchFadeOut"  Duration="150" Delay="0" AutomaticallyStart="False" Value="0" EasingMode="EaseOut"  EasingType="Cubic" />
                                </Interactivity:Interaction.Behaviors>
                                <Grid Margin="0 0 8 0">
                                    <AutoSuggestBox Style="{StaticResource AutoSuggestBoxStyle1}" 
                                                    x:Name="TrackSearchBox"
                                                    PlaceholderText="Find in playlists"
                                                    Text="{Binding TrackSearchText, Mode=TwoWay}"   
                                                    Padding="12 0 12 0"
                                                    FontSize="17"
                                                    Height="36"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Stretch"
                                                    DisplayMemberPath="Title"
                                                    IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}">
                                    </AutoSuggestBox>
                                </Grid>
                                <StackPanel Orientation="Horizontal" 
                                            Grid.Column="1">
                                    <ComboBox Style="{StaticResource ComboBoxStyle1}" 
                                              BorderThickness="0"
                                              extensions:Mouse.Cursor="Hand"
                                              CornerRadius="10"
                                              Width="164"
                                              Padding="16 0 0 0"
                                              Margin="0 0 8 0"
                                              VerticalContentAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              ItemsSource="{Binding TracksSortList}"
                                              SelectedItem="{Binding CurrentTrackSorting, Mode=TwoWay}"
                                              Background="{ThemeResource ItemBackgroundThemeBrush}"
                                              IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}">

                                        <ComboBox.ItemTemplate>
                                            <DataTemplate x:DataType="model:Sorting">
                                                <TextBlock Text="{Binding Title}" HorizontalAlignment="Left" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" ToolTipService.ToolTip="{Binding Text, RelativeSource={RelativeSource Mode=Self}}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <ToggleButton Background="{ThemeResource ItemBackgroundThemeBrush}" 
                                                  IsChecked="{Binding IsSelectAllTracksChecked, Mode=TwoWay}" 
                                                  CornerRadius="10" 
                                                  extensions:Mouse.Cursor="Hand" 
                                                  Width="36" 
                                                  VerticalAlignment="Stretch"
                                                  IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B3;" FontSize="16"/>
                                    </ToggleButton>
                                    <!--<ToggleSwitch ToolTipService.ToolTip="Select All" Style="{StaticResource ToggleSwitchStyle1}" IsOn="{Binding IsSelectAllTracksChecked, Mode=TwoWay}" OffContent="" OnContent="" Width="44" BackgroundSizing="InnerBorderEdge"/>-->
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Controls:ScrollHeader>
                </ListView.Header>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel HorizontalAlignment="Center" 
                                         MaxWidth="{Binding ElementName=page, Path=DataContext.TracksMaxWidth}"
                                         Width="{Binding ElementName=page, Path=DataContext.TracksViewWidth}"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Grid Height="64" Grid.Row="1"
                  Padding="24 0" Grid.RowSpan="10" VerticalAlignment="Bottom"
                  Visibility="{Binding TracksViewHasSelectedItems, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.Background>
                    <media:AcrylicBrush
                        BackgroundSource="HostBackdrop"
                        TintColor="{ThemeResource TintColor}"
                        FallbackColor="#000000"
                        TintOpacity="0.95"
                        BlurAmount="12"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <animations:Implicit.ShowAnimations>
                    <animations:ScalarAnimation Target="Translation.Y" Duration="00:00:00.3000000" From="50" To="0"/>
                    <animations:OpacityAnimation Duration="00:00:00.3000000" To="1"/>
                </animations:Implicit.ShowAnimations>
                <animations:Implicit.HideAnimations>
                    <animations:ScalarAnimation Target="Translation.Y" Duration="00:00:00.1500000" To="50"/>
                    <animations:OpacityAnimation Duration="00:00:00.1500000" To="0"/>
                </animations:Implicit.HideAnimations>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Selected" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Margin="8 0 0 0" 
                               VerticalAlignment="Center"/>
                    <StackPanel Margin="4" Orientation="Horizontal">
                        <TextBlock Text="(" 
                                   FontSize="13" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TracksViewSelectedItemsCount, FallbackValue=0}" 
                                   FontSize="13" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text=")" 
                                   FontSize="13"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Height="36"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                    <Button Background="Transparent"
                            Command="{Binding ClearSelectedTracksCommand}"
                            CornerRadius="10"
                            extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource ItemPrimaryForeground}"
                            Padding="12 4"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                            Style="{StaticResource TextBlockButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE8E6;" FontSize="16"/>
                            <TextBlock Text="Clear" FontSize="12" Margin="8 0 0 0"/>
                        </StackPanel>
                    </Button>
                    <Button Background="Transparent"
                            Command="{Binding RemoveSelectedFromCurrentPlaylistCommand}"
                            CornerRadius="10"
                            extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource ItemPrimaryForeground}"
                            Padding="12 4"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                            Style="{StaticResource TextBlockButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                            <TextBlock Text="Delete" FontSize="12" Margin="8 0 0 0"/>
                        </StackPanel>
                    </Button>
                    <Button Background="Transparent"
                            Command="{Binding PlaySelectedTracksCommand}"
                            CornerRadius="10"
                            extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource ItemPrimaryForeground}"
                            Padding="12 4"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                            Style="{StaticResource TextBlockButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE768;" FontSize="16"/>
                            <TextBlock Text="Play" FontSize="12" Margin="8 0 0 0"/>
                        </StackPanel>
                    </Button>
                    <Button Background="Transparent"
                            CornerRadius="10"
                            extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource ItemPrimaryForeground}"
                            Padding="12 4"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                            Style="{StaticResource TextBlockButtonStyle}">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Add to queue" Command="{Binding AddSelectedTracksToQueueCommand}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE768;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Create new playlist" Command="{Binding ShowCreatePlaylistTracksDialogCommand}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xED11;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Add to other playlist" Command="{Binding AddSelectedTracksToPlaylistCommand}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE8D6;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                        <FontIcon Glyph="&#xE712;" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal"
                        Margin="0 12"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                <Interactivity:Interaction.Behaviors>
                    <ToolkitBehaviors:Fade x:Name="TracksListViewActionsFocus" Duration="300" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                    <ToolkitBehaviors:Fade x:Name="TracksListViewActionsUnfocus" Duration="300" Delay="0" AutomaticallyStart="False" Value="0.1" EasingMode="EaseOut" EasingType="Cubic" />
                </Interactivity:Interaction.Behaviors>
                <Button Command="{Binding ElementName=page, Path=DataContext.ShowEditPlaylistCommand}"
                        CommandParameter="{Binding CurrentPlaylist}"
                        CornerRadius="10"
                        extensions:Mouse.Cursor="Hand"
                        Foreground="{ThemeResource ItemPrimaryForeground}"
                        Padding="12 4"
                        VerticalAlignment="Stretch"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                        Style="{StaticResource TextBlockButtonStyle}"
                        Visibility="{Binding CurrentPlaylist.CanModify, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                        <TextBlock Text="Edit" FontSize="12" Margin="8 0 0 0"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding CloseTracksButtonCommand}"
                        CornerRadius="10"
                        extensions:Mouse.Cursor="Hand"
                        Foreground="{ThemeResource ItemPrimaryForeground}"
                        Padding="12 4"
                        VerticalAlignment="Stretch"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                        Style="{StaticResource TextBlockButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE711;" FontSize="16"/>
                        <TextBlock Text="Close" FontSize="12" Margin="8 0 0 0"/>
                    </StackPanel>
                </Button>
                <Button CornerRadius="10"
                        extensions:Mouse.Cursor="Hand"
                        Foreground="{ThemeResource ItemPrimaryForeground}"
                        Padding="12 4"
                        Width="48"
                        VerticalAlignment="Stretch"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                        Style="{StaticResource TextBlockButtonStyle}">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Add to queue" Command="{Binding ElementName=page, Path=DataContext.AddPlaylistToQueueCommand}" CommandParameter="{Binding CurrentPlaylist}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE768;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Add to other playlist" Command="{Binding ElementName=page, Path=DataContext.AddPlaylistToPlaylistCommand}" CommandParameter="{Binding CurrentPlaylist}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8D6;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Share" Command="{Binding ShowCreatePlaylistTracksDialogCommand}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE72D;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Add to quick access" Command="{Binding ShowCreatePlaylistTracksDialogCommand}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE728;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Unfollow" Command="{Binding ElementName=page, Path=DataContext.UnfollowPlaylistCommand}" CommandParameter="{Binding CurrentPlaylist}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE711;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                    <FontIcon Glyph="&#xE712;" FontSize="16"/>
                </Button>
            </StackPanel>
            <CheckBox IsChecked="{Binding IsTracksView}" Visibility="Collapsed">
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Checked">
                        <Core:CallMethodAction TargetObject="{Binding ElementName=TracksViewImageScaleUp}" MethodName="StartAnimation"/>
                        
                        <Core:CallMethodAction TargetObject="{Binding ElementName=PlaylistInfoTrackViewOffsetIn}" MethodName="StartAnimation"/>
                        <Core:CallMethodAction TargetObject="{Binding ElementName=PlaylistInfoTrackViewFadeIn}" MethodName="StartAnimation"/>

                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackSearchOffsetIn}" MethodName="StartAnimation"/>
                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackSearchFadeIn}" MethodName="StartAnimation"/>

                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackSubtitleOffsetIn}" MethodName="StartAnimation"/>
                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackSubtitleFadeIn}" MethodName="StartAnimation"/>
                    </Core:EventTriggerBehavior>
                    <Core:EventTriggerBehavior EventName="Unchecked">
                        <Core:CallMethodAction TargetObject="{Binding ElementName=TracksViewImageScaleDown}" MethodName="StartAnimation"/>
                        
                        <Core:CallMethodAction TargetObject="{Binding ElementName=PlaylistInfoTrackViewOffsetOut}" MethodName="StartAnimation"/>
                        <Core:CallMethodAction TargetObject="{Binding ElementName=PlaylistInfoTrackViewFadeOut}" MethodName="StartAnimation"/>

                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackSearchOffsetOut}" MethodName="StartAnimation"/>
                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackSearchFadeOut}" MethodName="StartAnimation"/>

                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackSubtitleOffsetOut}" MethodName="StartAnimation"/>
                        <Core:CallMethodAction TargetObject="{Binding ElementName=TrackSubtitleFadeOut}" MethodName="StartAnimation"/>
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </CheckBox>
        </Grid>
        
        <Grid x:Name="QuickAccess" 
              Grid.RowSpan="10"
              Grid.ColumnSpan="10"
              Visibility="{Binding ShowQuickAccessView, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=collapsed}">
            <Grid.Background>
                <media:AcrylicBrush
                      BackgroundSource="Backdrop"
                      TintColor="{ThemeResource TintColor}"
                      TintOpacity="0.50"
                      BlurAmount="12"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <CheckBox Style="{StaticResource PopupDismissCheckBoxStyle}"
                      Grid.ColumnSpan="10"
                      IsChecked="{Binding ShowQuickAccessView, Mode=TwoWay}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"/>
            <Grid Grid.Row="0"
                  Grid.ColumnSpan="10" 
                  Margin="0 44"
                  VerticalAlignment="Top">

                <TextBlock Text="Quick access" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                    <Button Command="{Binding ClearQuickAccessCommand}"
                            CornerRadius="10"
                            extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource ItemPrimaryForeground}"
                            Padding="12 4"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                            Style="{StaticResource TextBlockButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                            <TextBlock Text="Clear" FontSize="12" Margin="8 0 0 0"/>
                        </StackPanel>
                    </Button>
                    <Button Background="Transparent"
                            Command="{Binding ToggleQuickAccessCommand}"
                            CornerRadius="10"
                            extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource ItemPrimaryForeground}"
                            Padding="12 4"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                            Style="{StaticResource TextBlockButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE711;" FontSize="16"/>
                            <TextBlock Text="Close" FontSize="12" Margin="8 0 0 0"/>
                        </StackPanel>
                    </Button>
                    <Button CornerRadius="10"
                            extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource ItemPrimaryForeground}"
                            Padding="12 4"
                            Width="48"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"
                            Style="{StaticResource TextBlockButtonStyle}">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Play">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE768;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Add to queue">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE8D6;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                        <FontIcon Glyph="&#xE712;" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid MaxHeight="280"
                  Grid.Row="1"
                  Grid.RowSpan="100"
                  Grid.ColumnSpan="10">
                <Grid.Background>
                    <media:AcrylicBrush
                        BackgroundSource="Backdrop"
                        TintColor="{ThemeResource TintColor}"
                        TintOpacity="0.95"
                        BlurAmount="12"/>

                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <animations:Implicit.ShowAnimations>
                    <animations:ScalarAnimation Target="Translation.Y" Duration="00:00:00.3000000" From="50" To="0"/>
                    <animations:OpacityAnimation Duration="00:00:00.3000000" To="1"/>
                </animations:Implicit.ShowAnimations>
                <animations:Implicit.HideAnimations>
                    <animations:ScalarAnimation Target="Translation.Y" Duration="00:00:00.1500000" To="50"/>
                    <animations:OpacityAnimation Duration="00:00:00.1500000" To="0"/>
                </animations:Implicit.HideAnimations>
                <ListView x:Name="QuickAccessView"
                          Grid.Row="1"
                          HorizontalContentAlignment="Center"
                          IsItemClickEnabled="True"
                          model:ItemClickCommand.Command="{Binding PlaylistItemClickCommand}"
                          ItemsSource="{Binding QuickAccessCollectionView}"
                          Margin="0" Padding="12 12" SelectionMode="None"
                          ScrollViewer.HorizontalScrollMode="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          ScrollViewer.VerticalScrollMode="Disabled"
                          extensions:ScrollViewerExtensions.HorizontalScrollBarMargin="2 2 2 2"
                          extensions:ScrollViewerExtensions.VerticalScrollBarMargin="2, 2, 2, 2"
                          ItemContainerStyle="{StaticResource QuickAccessViewItemContainerStyle}">
                    <Grid/>
                    <Grid/>
                    <Grid/>
                    <Grid/>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:Playlist">
                            <Grid x:Name="connectedElement"  extensions:Mouse.Cursor="Hand" 
                                  Width="128" 
                                  Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Interactivity:Interaction.Behaviors>
                                    <Core:EventTriggerBehavior EventName="PointerEntered">
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessShadowScaleDown}" MethodName="StartAnimation"/>
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessTitleOffsetUp}" MethodName="StartAnimation"/>
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessThumbScaleUp}" MethodName="StartAnimation"/>
                                    </Core:EventTriggerBehavior>
                                    <Core:EventTriggerBehavior EventName="PointerExited">
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessShadowScaleUp}" MethodName="StartAnimation"/>
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessTitleOffsetX}" MethodName="StartAnimation"/>
                                        <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessThumbScaleDown}" MethodName="StartAnimation"/>
                                    </Core:EventTriggerBehavior>
                                </Interactivity:Interaction.Behaviors>
                                <Grid Height="128" Width="128" VerticalAlignment="Top">
                                    <Interactivity:Interaction.Behaviors>
                                        <Core:EventTriggerBehavior EventName="PointerEntered">
                                            <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessBgFadeIn}" MethodName="StartAnimation"/>
                                            <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessPlayBtnFadeIn}" MethodName="StartAnimation"/>
                                        </Core:EventTriggerBehavior>
                                        <Core:EventTriggerBehavior EventName="PointerExited">
                                            <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessBgFadeOut}" MethodName="StartAnimation"/>
                                            <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessPlayBtnFadeOut}" MethodName="StartAnimation"/>
                                        </Core:EventTriggerBehavior>
                                    </Interactivity:Interaction.Behaviors>
                                    <Grid CornerRadius="24" Background="{ThemeResource ItemBackgroundThemeBrush}">
                                        <Interactivity:Interaction.Behaviors>
                                            <ToolkitBehaviors:Scale x:Name="quickAccessThumbScaleUp" Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="0.95" ScaleY="0.95" CenterX="125" CenterY="125" EasingMode="EaseOut"  EasingType="Cubic" />
                                            <ToolkitBehaviors:Scale x:Name="quickAccessThumbScaleDown"  Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="1" ScaleY="1" CenterX="125" CenterY="125" EasingMode="EaseOut"   EasingType="Cubic"/>
                                        </Interactivity:Interaction.Behaviors>
                                        <Image Source="{Binding Image}" Width="128" Stretch="UniformToFill"/>
                                        <Rectangle Margin="-1" Opacity="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Rectangle.Fill>
                                                <media:AcrylicBrush BackgroundSource="Backdrop"
                                                                    TintColor="#000000"
                                                                    TintOpacity="0.70"
                                                                    BlurAmount="5" 
                                                                    FallbackColor="#000000"/>
                                            </Rectangle.Fill>
                                            <Interactivity:Interaction.Behaviors>
                                                <ToolkitBehaviors:Fade x:Name="quickAccessBgFadeIn" Duration="300" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                                                <ToolkitBehaviors:Fade x:Name="quickAccessBgFadeOut"  Duration="150" Delay="0" AutomaticallyStart="False" Value="0" EasingMode="EaseOut"  EasingType="Cubic" />
                                            </Interactivity:Interaction.Behaviors>
                                        </Rectangle>
                                        <Grid Margin="12"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Bottom">
                                            <Button Background="#000000"
                                                    BorderBrush="Transparent"
                                                    Foreground="#ffffff"
                                                    BorderThickness="2"
                                                    CornerRadius="24"
                                                    RequestedTheme="Dark"
                                                    Command="{Binding ElementName=page, Path=DataContext.RemoveQuickAccessItemCommand}"
                                                    CommandParameter="{Binding}"
                                                    Height="24"
                                                    Padding="0"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Width="24">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE711;" FontSize="12"/>
                                            </Button>
                                        </Grid>
                                        <Grid Height="40" Width="40"
                                              Margin="24"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                                            <muxc:ProgressRing IsActive="{Binding IsLoadingPreview}" 
                                                               Height="40" Width="40"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="WhiteSmoke"/>
                                            <Button x:Name="quickAccessPlayBtn" BorderThickness="2" 
                                                    Background="{x:Null}" Opacity="0"
                                                    BorderBrush="WhiteSmoke"
                                                    Foreground="WhiteSmoke"
                                                    RequestedTheme="Dark"
                                                    CornerRadius="48"
                                                    Height="40" Width="40"
                                                    Command="{Binding ElementName=page, Path=DataContext.PlayMediaItemCommand}"
                                                    CommandParameter="{Binding}"
                                                    Padding="0"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch">
                                                <Interactivity:Interaction.Behaviors>
                                                    <ToolkitBehaviors:Scale x:Name="quickAccessPlayBtnScaleUp" Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="1.2" ScaleY="1.2" CenterX="16" CenterY="16" EasingMode="EaseOut"  EasingType="Cubic" />
                                                    <ToolkitBehaviors:Scale x:Name="quickAccessPlayBtnScaleNormal"  Duration="250" Delay="0" AutomaticallyStart="False" ScaleX="1" ScaleY="1" CenterX="16" CenterY="16" EasingMode="EaseOut"   EasingType="Cubic"/>
                                                    <ToolkitBehaviors:Fade x:Name="quickAccessPlayBtnFadeIn" Duration="300" Delay="0" AutomaticallyStart="False" Value="1" EasingMode="EaseOut" EasingType="Cubic" />
                                                    <ToolkitBehaviors:Fade x:Name="quickAccessPlayBtnFadeOut"  Duration="150" Delay="0" AutomaticallyStart="False" Value="0" EasingMode="EaseOut"  EasingType="Cubic" />

                                                    <Core:EventTriggerBehavior EventName="PointerEntered">
                                                        <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessPlayBtnScaleUp}" MethodName="StartAnimation"/>
                                                        <Core:InvokeCommandAction Command="{Binding ElementName=page, Path=DataContext.PlayPreviewCommand}" CommandParameter="{Binding}" />
                                                    </Core:EventTriggerBehavior>
                                                    <Core:EventTriggerBehavior EventName="PointerExited">
                                                        <Core:CallMethodAction TargetObject="{Binding ElementName=quickAccessPlayBtnScaleNormal}" MethodName="StartAnimation"/>
                                                        <Core:InvokeCommandAction Command="{Binding ElementName=page, Path=DataContext.StopPreviewCommand}" CommandParameter="{Binding}" />
                                                    </Core:EventTriggerBehavior>
                                                </Interactivity:Interaction.Behaviors>

                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF5B0;" FontSize="14"/>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <StackPanel Grid.Row="1"
                                            Margin="8 8 0 0">
                                    <TextBlock Text="{Binding Title, FallbackValue=Unknown}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               TextWrapping="NoWrap"
                                               TextTrimming="CharacterEllipsis" 
                                               ToolTipService.ToolTip="{Binding Text, RelativeSource={RelativeSource Mode=Self}}">
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel HorizontalAlignment="Center" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </Grid>
        </Grid>
        <Grid x:Name="DialogBackground"
              Grid.ColumnSpan="100"
              Grid.RowSpan="100"
              Visibility="{Binding IsDialogOpen, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <Grid.Background>
                <media:AcrylicBrush
                      BackgroundSource="Backdrop"
                      TintColor="{ThemeResource TintColor}"
                      TintOpacity="0.75"
                      BlurAmount="12"/>

            </Grid.Background>
        </Grid>
        <Grid Height="32" VerticalAlignment="Top" Grid.ColumnSpan="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="DragGrid" Background="Transparent" Grid.Column="1">
                <!--<TextBlock Text="Spotify companion" Margin="8,8,0,0" />-->

            </Grid>
        </Grid>
        <StackPanel x:Name="TopBarActions"  
                    Orientation="Horizontal" 
                    VerticalAlignment="Top" 
                    Grid.ColumnSpan="10">
            <Button Background="Transparent"
                    extensions:Mouse.Cursor="Hand"
                    Width="48">
                <Button.Content>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE10C;" FontSize="16" Margin="2,4,2,2" />
                </Button.Content>
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Refresh" Command="{Binding RefreshCommand}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE72C;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Settings">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE713;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
            <!--<Button Background="Transparent"
                    extensions:Mouse.Cursor="Hand"
                    Command="{Binding RefreshCommand}"
                    Width="48" 
                    Padding="0"
                    VerticalAlignment="Stretch">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72C;" FontSize="16"/>
            </Button>-->
            <Button Background="Transparent"
                    extensions:Mouse.Cursor="Hand"
                    Command="{Binding ToggleQuickAccessCommand}"
                    Padding="8 0"
                    VerticalAlignment="Stretch"
                    Visibility="{Binding ShowQuickAccessView, Converter={StaticResource BoolToVisibilityInverseConverter}, FallbackValue=collapsedc}">
                <!--<FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE728;" FontSize="16"/>-->
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE728;" FontSize="16"/>
                    <TextBlock Text="Quick access" Margin="8 0 0 0"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <ProgressBar Grid.ColumnSpan="100"
                     IsIndeterminate="{Binding IsLoading}"
                     Foreground="{ThemeResource ItemPrimaryForeground}"
                     Margin="232 0 172 0"
                     VerticalAlignment="Center"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">

        </ProgressBar>
    </Grid>
</Page>
